<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %log{36} - %msg%n"/>
        </Console>
    </Appenders>
    <logs>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
<!--        <log name="com.epam.esm" level="debug" additivity="false">-->
<!--            <AppenderRef ref="Console"/>-->
<!--        </log>-->
<!--        <log name="com.epam.esm" level="error" additivity="false">-->
<!--            <AppenderRef ref="Console"/>-->
<!--        </log>-->
        <logs>
            <Root level="error">
                <AppenderRef ref="Console"/>
            </Root>
        </logs>
    </logs>
</Configuration>
